div.container
    div.row
      div.col-sm-6.col-md-6.col-md-offset-3
        .text-center
          div.account-wall
            img(class='profile-img', src='images/anonymous.png' style="margin-bottom: 20px;")
            form(class='form-signin', autocomplete="on")
              div(class="alert alert-danger", role="alert", ng-show="authLoginCtrl.loginErrorShown")
                span(class="glyphicon glyphicon-exclamation-sign", aria-hidden="true")
                span(class="sr-only") 
                span  {{ authLoginCtrl.loginErrorMessage }}
              div(class="form-group")
                input(ng-model='authLoginCtrl.user.email', class='form-control', placeholder='Email',required, autofocus)
                input(ng-model='authLoginCtrl.user.password', type='password', class='form-control', placeholder='Password', required)
                a(href='forgotPassword') Forgot password
              button(class='btn btn-lg btn-primary btn-block', ng-click='authLoginCtrl.login()') Log in
              span.clearfix