extends ./layout_wh
 
block content
  div.container
    div.row
      div.col-sm-6.col-md-6.col-md-offset-3
        .text-center
          div.account-wall
            form(class='form-signin', action='./api/users/forgotPassword', method='POST')
             div(class="form-group")
              input(type='text', name='email' class='form-control', placeholder='Email',required, autofocus)
             button(class='btn btn-lg btn-primary btn-block', type='submit') Send
             span.clearfix